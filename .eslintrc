
{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "import",
    "jest"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-mixed-spaces-and-tabs": [0],
    "no-tabs": 0,
    "skipBlankLines": 0,
    "ignoreComments": 0,
    "no-plusplus": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-loop-func": 0,
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "space-infix-ops": 0
  }
}
